{
// translate from https://ohama.github.io/ocaml/ocamllex-tutorial/examples/wordcount/
}

rule _count[T : @lexbuf.IStringLexbuf](lines : Int, words : Int, chars : Int, lexbuf : T) -> (Int, Int, Int) {
  parse {
    '\n' => { _count(lines + 1, words, chars + 1, lexbuf) }
    [^ ' ' '\t' '\n' ]+ as word => {
      let new_chars = chars + word.length()
      _count(lines, words + 1, new_chars, lexbuf)
    }
    _ => { _count(lines, words, chars + 1, lexbuf) }
    "" => { (lines, words, chars) }
  }
}

